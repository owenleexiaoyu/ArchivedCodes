<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ArcProgress">

        <!--初始值-->
        <attr name="arc_progress" format="integer"/>
        <!--小数位数-->
        <attr name="decimal_digits" format="integer"/>
        <!--弧度-->
        <attr name="arc_angle" format="float"/>
        <!--宽度-->
        <attr name="arc_stroke_width" format="dimension"/>
        <!--最大值-->
        <attr name="arc_max" format="integer"/>
        <!--底色-->
        <attr name="arc_unfinished_color" format="color"/>
        <!--画弧度的颜色-->
        <attr name="arc_finished_color" format="color"/>
        <attr name="arc_progress_text_size" format="dimension"/>
        <attr name="arc_progress_text_color" format="color"/>

        <attr name="arc_progress_text_top_text" format="string"/>
        <attr name="arc_progress_text_top_size" format="dimension"/>
        <attr name="arc_progress_text_top_color" format="color"/>


        <attr name="arc_progress_text_bottom_text" format="string"/>
        <attr name="arc_progress_text_bottom_size" format="dimension"/>
        <attr name="arc_progress_text_bottom_color" format="color"/>

        <!--旁边的占位符-->
        <attr name="arc_progress_suffix_text" format="string"/>
        <attr name="arc_progress_suffix_text_size" format="dimension"/>
        <attr name="arc_progress_suffix_text_color" format="color"/>



        <!--最底部的文字-->
        <attr name="arc_bottom_text" format="string"/>
        <attr name="arc_bottom_text_size" format="dimension"/>
    </declare-styleable>
</resources>