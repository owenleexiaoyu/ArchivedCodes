<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/mine_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/bg1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77000000"/>
        <com.redant.childcare.widgets.CircleImageView
            android:id="@+id/personal_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/qusport"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/mine_nickname"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="未登录"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/personal_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <GridView
        android:gravity="center"
        android:id="@+id/personal_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:overScrollMode="never"
        android:scrollbars="none"/>


</LinearLayout>
